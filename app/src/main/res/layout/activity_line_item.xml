<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context="com.example.markf.dnomics.LineItem">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--<android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorFrogGreen">

                <TextView
                    android:id="@+id/LineItemActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/action_title_padding_left"
                    android:text="@string/lineitem"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/action_title_size" />
            </android.support.design.widget.AppBarLayout>-->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LineItemContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/data_screen_padding_left"
            android:paddingRight="@dimen/data_screen_padding_right"
            android:paddingTop="@dimen/data_screen_padding_top"
            android:orientation="vertical"
            android:theme="@style/ActionBar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <ImageView
                    android:layout_width="@dimen/data_screen_icon_size"
                    android:layout_height="@dimen/data_screen_icon_size"
                    android:src="@drawable/lineitem"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/LireportName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text=""
                    android:textColor="@color/colorBlue"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/reportNumber"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/colorFrogGreen"
                    android:textSize="15dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/lblLineItemAmt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/data_screen_control_padding_top"
                android:text="@string/lineitemamt" />

            <EditText
                android:id="@+id/txtLineItemAmt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="50"
                android:ems="10"
                android:text="@string/no_text" />

            <TextView
                android:id="@+id/lblLineItemDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/data_screen_control_padding_top"
                android:text="@string/lineitemdescription" />

            <EditText
                android:id="@+id/txtLineItemDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="50"
                android:ems="10"
                android:text="@string/no_text" />

            <TextView
                android:id="@+id/lblLineItemMerchant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/data_screen_control_padding_top"
                android:text="@string/lineitemmerchant" />

            <EditText
                android:id="@+id/txtLineItemMerchant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="50"
                android:ems="10"
                android:text="@string/no_text" />

            <TextView
                android:id="@+id/lblLineItemAllocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/data_screen_control_padding_top"
                android:text="@string/lineitemallocation" />

            <EditText
                android:id="@+id/txtLineItemAllocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="50"
                android:ems="10"
                android:text="@string/no_text" />

            <Button
                android:id="@+id/btnAttachTicket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/colorFrogGreen"
                android:text="@string/lineitemattach"
                android:textColor="@color/colorWhite" />

            <Button
                android:id="@+id/btnSaveLineItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorBlue"
                android:text="@string/guardar"
                android:textColor="@color/colorWhite" />
        </LinearLayout>

    </LinearLayout>


</ScrollView>
